<form id="mailForm" method="POST">
  <div class="text-center">
    <img src="/img/login.svg" height=80px>
    <h2 class="my-2">Olvidaste tu contraseña</h2>
    <hr>
  </div>
  <div class="form-group">
    <label for="email" class="my-2">Escriba su dirección de correo electronico:</label>
    <input type="email" id="email" name="email" class="form-control" placeholder="Ingrese su email" required>
  </div>
  <button type="submit" class="btn botonEnviar">Enviar</button>
  <div class="d-flex justify-content-between my-2">
    <a href="/login">Iniciar sesion</a>
    <a href="/register">Registrarse</a>
  </div>
</form>

<script src="js/forgotPassword.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.19/dist/sweetalert2.min.js"></script>  